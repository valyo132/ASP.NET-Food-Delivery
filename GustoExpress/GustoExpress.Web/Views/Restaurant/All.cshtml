@using GustoExpress.Web.ViewModels;
@model List<AllRestaurantViewModel>

<section class="my-5">
    <div class="container-lg">
        @foreach (var restaurant in Model)
        {
            <div class="mb-4 row justify-content-center">
                <div class="col-lg-6">
                    <div class="btn card border-0 shadow-sm" href="#">
                        <div class="row">
                            <div class="col-8">
                                <div class="card-body">
                                    <h5 class="card-title fw-bold">@restaurant.Name</h5>
                                    <div class="card-text">
                                        @restaurant.Description
                                    </div> <br />
                                    <i class="bi bi-clock"></i> @restaurant.TimeToDeliver min. <br />
                                    <i class="bi bi-truck"></i> @restaurant.DeliveryPrice lv.
                                </div>
                            </div>
                            <div class="col-4 d-flex align-items-center">
                                <img class="img-fluid float-end" src="@restaurant.ImageURL">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
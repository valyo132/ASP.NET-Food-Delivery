@{
    ViewData["Title"] = "Home Page";
}

<section class="py-3 bg-light">
    <div class="container text-center">
        <h1>Hello Admin</h1>
        <p>This is your admin area!</p>
        <div class="row">
            <form>
                <button class="btn btn-primary" type="submit" asp-area="Admin" asp-action="CreateRestaurant" asp-controller="Restaurant">Create restaurant</button>
                <button class="btn btn-primary" type="submit" asp-area="Admin" asp-action="All" asp-controller="Restaurant">All restaurants</button>
                <button class="btn btn-primary" type="submit" asp-area="Admin" asp-action="All" asp-controller="User">All users</button>
            </form>
        </div>
    </div>
</section>